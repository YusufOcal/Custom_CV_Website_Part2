@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Öğrenim Sağladığım Projeler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> İkon </th>
                                <th> Proje Adı </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl1" /></td>
                                    <td> @item.Name </td>
                                    <td> @item.Price </td>
                                    <td> %@item.Value </td>
                                    <td>
                                            @if (item.Value == 100)
                                            {
                                                item.Status = "True";
                                            }
                                            else
                                            {
                                                item.Status = "False";
                                            }
                                            @if (item.Status == "True")
                                            {
                                                <div class="badge badge-outline-success">
                                                    <span class="status">Tamamlandı</span>
                                                </div>
                                            }
                                            else
                                            {
                                            <div class="badge badge-outline-info">
                                                <span class="status">Devam Ediyor</span>
                                            </div>
                                            }
                                    </td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>