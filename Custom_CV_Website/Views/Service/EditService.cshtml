@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4>Hizmet Düzenleme Paneli</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceID)

                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    @Html.Label("Resim Yolu")
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a href="@Url.Action("Index", "Service")" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
}
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>

