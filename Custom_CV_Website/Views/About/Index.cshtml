@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(x => x.AboutID)
    <br />

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hakkımda Düzenleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Hakkımda Başlığı</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Hakkımda Açıklama</label>
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yaş Bilgisi</label>
                        @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mail Bilgisi</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Adres Bilgisi</label>
                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel Yolu</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a href="@Url.Action("Index", "About")" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
}
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>