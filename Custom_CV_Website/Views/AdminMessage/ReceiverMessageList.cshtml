@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.SenderName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td><a href="/AdminMessage/AdminMessageDelete/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.ID" class="btn btn-outline-success">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/AdminMessage/AdminMessageSend/" class="btn btn-info" style="width:200px; height:35px;">Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>

</div>

<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>

