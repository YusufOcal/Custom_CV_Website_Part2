@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form class="form-group" method="post">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Mesaj Gönderme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Konu</label>                      
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Subject)
                    </div>
                    <div class="form-group">
                        <label>Alıcı Mail</label>
                        @Html.TextBoxFor(x => x.Reciever, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Reciever)
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x => x.MessageContent, new { @class= "form-control"})
                        @Html.ValidationMessageFor(x => x.MessageContent)
                    </div>  
                    <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                    <a href="@Url.Action("SenderMessageList", "AdminMessage")" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
</form>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
