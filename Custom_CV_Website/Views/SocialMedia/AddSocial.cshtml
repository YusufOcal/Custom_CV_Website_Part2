@model EntityLayer.Concrete.Social

@{
    ViewData["Title"] = "AddSocial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form class="form-group" method="post">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Sosyal Medya Ekle </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Platform</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Sosyal Medya Linki</label>
                        <input type="url" class="form-control" name="Url">
                    </div>
                    <div class="form-group">
                        <label>Aktif ise True / Pasif ise False</label>
                        @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a href="@Url.Action("Index", "SocialMedia")" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
</form>

