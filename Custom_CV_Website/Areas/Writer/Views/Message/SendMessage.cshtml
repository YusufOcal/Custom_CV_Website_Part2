@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>Yeni Mesaj Oluşturma</h3>
<br />

<form class="form-grup" method="post">
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })

    @Html.Label("Alıcı Mail")
    @Html.TextBoxFor(x => x.Reciever, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Reciever)
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Subject)
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 8, 4, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MessageContent)
    <br />

    <button class="btn btn-primary">Gönder</button>
</form>

