@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "ReceiverMessagesDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>Mesaj Detayları</h3>
<br />

<form class="form-grup">
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })

    @Html.Label("Gönderen Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderilen Tarih")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderen Adı")
    @Html.TextAreaFor(x => x.MessageContent, 10, 4, new { @class = "form-control" })
</form>

